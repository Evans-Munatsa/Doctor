- @posts.each do |post|
  .container
    .row
      .col-md-5
        .col-sm-10 
          .thumbnail
            =link_to (image_tag post.image.url(:medium)), post

      .col-md-7
        %h3
          #{post.title}
        %p
          #{post.description}
        %p
          %button= link_to 'Show', post_path(post)
          %button= link_to 'Edit', edit_post_path(post)
          %button= link_to 'Destroy', post_path(post), |
              method: :delete,                    |
              data: { confirm: 'Are you sure?' }  |
        %hr


